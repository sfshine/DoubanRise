<resources>
	<style name="MyDialogStyle" parent="@android:Theme.Dialog">
		<item name="android:windowFrame">@null</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:background">@android:color/transparent</item>
		<item name="android:windowBackground">@android:color/transparent</item>
	</style>
	<style name="Widget.EditText" parent="@android:style/Widget.EditText">
		<item name="android:textColor">@color/black</item>
		<item name="android:textColorHint">#ffdbdbdb</item>
		<item name="android:background">@drawable/edit_text</item>
		<item name="android:paddingLeft">10.0dip</item>
		<item name="android:selectAllOnFocus">true</item>
	</style>
	<style name="Dialog.Button" parent="@android:style/Widget.Button">
		<item name="android:textSize">18.0sp</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:background">@drawable/dialog_btn_default</item>
		<item name="android:minHeight">50.0dip</item>
	</style>
	<style name="Dialog.OKButton" parent="@android:style/Widget.Button">
		<item name="android:textSize">18.0sp</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:background">@drawable/dialog_ok_btn_default</item>
		<item name="android:minHeight">50.0dip</item>
	</style>
	<style name="nvbutton">
		<item name="android:layout_weight">1</item>
		<item name="android:textSize">17.0sp</item>
		<item name="android:textColor">#99ffffff</item>
		<item name="android:background">@drawable/btn_background_selector</item>
		<item name="android:padding">10dip</item>
		<item name="android:gravity">left</item>
	</style>
	<style name="titlefont">
		<item name="android:textSize">20.0sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#99ffffff</item>
	</style>
	<!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
	-->
	<style name="AppBaseTheme" parent="android:Theme.Light">		<!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
		-->
	</style>
	<style name="CustomWindowTitleBackground">
		<item name="android:background">#ff72aad6</item>
	</style>
	<!-- Application theme. -->
	<style name="AppTheme" parent="AppBaseTheme">
		<item name="android:textSize">17dip</item>
		<item name="android:windowTitleSize">45dip</item>
		<item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
	</style>
</resources>